<div class="gtco-section">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12" style="padding-top: 10rem; padding-bottom: 10rem;">
                <div class="col-md-6 animate-box">

                    <%- include('alerts') -%>

                    <h3>Entre em Contato</h3>
                    <form action="/contacts" method="post">
                        <div class="row form-group">
                            <div class="col-md-12">
                                <label for="name" class="sr-only">Nome</label>
                                <input type="text" id="name" name="name" class="form-control" placeholder="Seu nome" value="<%= body.name %>">
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label for="name" class="sr-only">Email</label>
                                <input type="text" id="email" name="email" class="form-control"
                                    placeholder="Seu endereço de email" <%= body.email %>>
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label for="name" class="sr-only">Mensagem</label>
                                <textarea name="message" id="message" cols="30" rows="10" class="form-control"
                                    placeholder="Escreva alguma coisa"><%= body.message %></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Enviar" class="btn btn-primary">
                        </div>
                    </form>
                </div>

                <div class="col-md-5 col-md-push-1 animate-box">

                    <div class="gtco-contact-info">
                        <h3>Informações de Contato</h3>
                        <ul>
                            <li class="address">Avenida, R. 1234, 56 - 1 andar - Centro, Odimais - RG,
                                0000000-000</li>
                            <li class="phone"><a href="tel://11987654321">(11) 98765-4321</a></li>
                            <li class="email"><a
                                    href="mailto:contato@sproviders.com.br">contato@sproviders.com.br</a></li>
                            <li class="url"><a href="#">sproviders.com.br</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>